# Sharedo DOCX to HTML Converter Service Environment Variables

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=8000
APP_ENV=development
DEBUG=false

# API Settings
API_PREFIX=/api/v1
API_TITLE=Sharedo DOCX to HTML Converter
API_VERSION=1.0.0

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=.docx
UPLOAD_TIMEOUT=30  # seconds

# Conversion Settings
MAX_WORKERS=4
CONVERSION_TIMEOUT=60  # seconds
CONFIDENCE_THRESHOLD=90  # minimum confidence for auto-approval

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/sharedo-converter.log

# Security
CORS_ORIGINS=*
API_KEY_ENABLED=false
API_KEY=your-secret-api-key-here

# Redis (optional)
REDIS_ENABLED=false
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Metrics
METRICS_ENABLED=true
METRICS_RETENTION_DAYS=7

# External Services
WEBHOOK_URL=
SLACK_WEBHOOK=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds